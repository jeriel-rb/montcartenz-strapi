{
  "kind": "collectionType",
  "collectionName": "product_reviews",
  "info": {
    "singularName": "product-review",
    "pluralName": "product-reviews",
    "displayName": "Product Review",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "username": {
      "type": "string"
    },
    "date": {
      "type": "date"
    },
    "review": {
      "type": "text",
      "required": true,
      "unique": false,
      "minLength": 5
    },
    "user_avatar": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images",
        "files"
      ]
    },
    "rating": {
      "type": "integer",
      "required": true,
      "max": 5,
      "min": 1
    },
    "product": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::product.product",
      "inversedBy": "product_reviews"
    }
  }
}
